# Example environment file for VID-API
# Copy this to .env and adjust values as needed

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
DEBUG=False

# Paths
UPLOADS_DIR=./uploads
RESULTS_DIR=./results
LOGS_DIR=./logs
MAX_FILE_SIZE=500

# Processing configuration
MAX_CONCURRENT_JOBS=4
JOB_TIMEOUT=600
CLEANUP_AFTER=24
KEEP_FAILED_JOBS=True

# Video defaults
DEFAULT_FPS=30
DEFAULT_CRF=23
DEFAULT_WIDTH=120
DEFAULT_STYLE=normal

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/vid-api.log

# CORS
CORS_ORIGINS=["*"]

# Redis (optional)
USE_REDIS=False
REDIS_URL=redis://localhost:6379/0

# FFmpeg
FFMPEG_PATH=ffmpeg
FFMPEG_TIMEOUT=300
